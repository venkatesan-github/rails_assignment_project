<div class="jumbotron">
  <div class="container text-center">
    <h1>Employee Lists</h1>
  </div>
</div>

<div class="container">

  <table class="table table-striped table-hover">
    <thead class="text-center">
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Designation</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @staffs.each do |staff| %>
        <tr>
          <td class="text-center"><%= staff.name %></td>
          <td class="text-center"><%= staff.age %></td>
          <td class="text-center"><%= staff.gender %></td>
          <td class="text-center"><%= staff.designation %></td>
          <td class="text-center">
          <%= link_to "Show", staff_path(staff), class: "btn btn-outline-primary btn-sm text-decoration-none mb-1" %>
          <%= link_to "Edit", edit_staff_path(staff), class: "btn btn-outline-success btn-sm text-decoration-none mb-1" %>
          <%= link_to "Delete", staff_path(staff), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm text-decoration-none mb-1" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center mt-3">
    <%= link_to "Create New Employee", new_staff_path, class: "btn btn-secondary btn-sm text-light text-decoration-none" %>
  </div>

</div>
