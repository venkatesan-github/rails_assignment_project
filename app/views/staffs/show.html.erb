<div class="jumbotron">
  <div class="container text-center">
    <h1>Employee Details</h1>
  </div>
</div>

<div class="container">
  <div class="card">
    <div class="card-body">
      <p>
        Name: <%= @staff.name %>
      </p>

      <p>
        Age: <%= @staff.age %>
      </p>

      <p>
        Gender: <%= @staff.gender %>
      </p>

      <p>
        Designation: <%= @staff.designation %>
      </p>
      <%= link_to "Edit", edit_staff_path(@staff), class: "btn btn-outline-success btn-sm text-decoration-none" %>
      <%= link_to "Back", staffs_path, class: "btn btn-outline-primary btn-sm text-decoration-none" %>
    </div>
  </div>
</div>