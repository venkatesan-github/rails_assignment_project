  <div class="container text-center">
  <h1>Create New Employee Data</h1>
  </div>
</div>

<%= render 'error_msg' %>
<%= form_for @staff do |f| %>
  <div class="container">
    <div class="card">
      <div class="card-body">
        <form>
          <div class="form-group">
            <label>Name:</label>
            <%= f.text_field :name, class:"form-control", required: "required" %>
          </div>
    
          <div class="form-group">
            <label>Age:</label>
            <%= f.number_field :age, class:"form-control", required: "required" %>
          </div>
    
          <div class="form-group">
            <label>Gender:</label>
            <%= f.text_field :gender, class:"form-control", required: "required" %>
          </div>
    
          <div class="form-group">
            <label>Designation:</label>
            <%= f.text_field :designation, class:"form-control", required: "required" %>
          </div>
        </form>
  
        <%= f.submit "Create Employee", class:"btn btn-primary btn-sm" %>
        <%= link_to "Back", staffs_path, class:"btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
          
<% end %>

