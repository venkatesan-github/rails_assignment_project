<div class="jumbotron">
  <div class="container text-center">
  <h1>Create New Employee Data</h1>
  </div>
</div>

<%= render 'error_msg' %>
<%= form_for @field do |f| %>
  <div class="container">
    <div class="card">
      <div class="card-body">
  
        <div class="form-group">
          <label for="name">Name:</label>
          <%= f.text_field :name, class:"form-control" %>
        </div>
  
        <div class="form-group">
          <label>Age:</label>
          <%= f.number_field :age, class:"form-control" %>
        </div>
  
        <div class="form-group">
          <label>Gender:</label>
          <%= f.text_field :gender, class:"form-control" %>
        </div>
  
        <div class="form-group">
          <label>Designation:</label>
          <%= f.text_field :designation, class:"form-control" %>
        </div>
  
        <%= f.submit "Create Employee", class:"btn btn-primary btn-sm" %>
        <%= link_to "Back", fields_path, class:"btn btn-secondary btn-sm" %>
      </div>
    </div>
  </div>
          
<% end %>

<%= link_to "Back", fields_path %>